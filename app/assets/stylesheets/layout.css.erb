body {
    padding-top: 20px;
    padding-bottom: 20px;
    background-color: #2a2a2a;
}

.page {
    background-color: white;
    border: 10px solid black;
}

.navbar {
    margin-bottom: 20px;
}

.navbar-mitlib {
    background-image: url("<%= asset_path 'banner.png' %>");
    background-color: #5c0c06;
    margin-left: -15px;
    margin-right: -15px;
    border: 1px solid #999;
    border-bottom: none;
}
.navbar-mitlib .navbar-nav>li>a {
    color: white;
}
.navbar-mitlib a:hover,
.navbar-mitlib a:focus,
.navbar-mitlib a:active,
.navbar-mitlib .navbar-nav>li>a:hover,
.navbar-mitlib .navbar-nav>li>a:focus,
.navbar-mitlib .navbar-nav>li>a:active {
    color: #ccc;
    text-decoration: none;
}
.navbar-mitlib .navbar-brand {
    height: auto;
    color: white;
}
.navbar-mitlib .navbar-text {
    color: white;
}
.navbar-mitlib .navbar-right:last-child {
    margin-right: 15px;
}

footer {
    background-color: black;
    color: white;
    margin-left: -15px;
    margin-right: -15px;
    padding-bottom: 10px;
}
